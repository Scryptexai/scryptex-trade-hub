
# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/trading_system
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Security Configuration
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Rate Limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
TRADING_RATE_LIMIT_WINDOW_MS=60000
TRADING_RATE_LIMIT_MAX_REQUESTS=20
BRIDGE_RATE_LIMIT_WINDOW_MS=300000
BRIDGE_RATE_LIMIT_MAX_REQUESTS=10

# Blockchain Configuration
RISECHAIN_RPC_URL=https://rpc.risechain.io
RISECHAIN_CHAIN_ID=11155931
RISECHAIN_PRIVATE_KEY=your-private-key-here
RISECHAIN_TRADING_CONTRACT=0x...
RISECHAIN_TOKEN_FACTORY_CONTRACT=0x...
RISECHAIN_BONDING_CURVE_CONTRACT=0x...

MEGAETH_RPC_URL=https://rpc.megaeth.io
MEGAETH_CHAIN_ID=6342
MEGAETH_PRIVATE_KEY=your-private-key-here

# WebSocket Configuration
WEBSOCKET_PORT=3002
WEBSOCKET_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Price Oracle Configuration
PRICE_UPDATE_INTERVAL_MS=5000
CHAINLINK_API_KEY=your-chainlink-api-key
COINGECKO_API_KEY=your-coingecko-api-key

# Queue Configuration
BULL_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5

# Monitoring & Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
ENABLE_MONITORING=true
MONITORING_INTERVAL_MS=30000

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@tradingsystem.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Trading Configuration
DEFAULT_SLIPPAGE_TOLERANCE=5
MAX_SLIPPAGE_TOLERANCE=15
TRADING_FEE_RATE=100
GRADUATION_THRESHOLD=69000
MIN_TRADE_AMOUNT=0.001
MAX_TRADE_AMOUNT=1000

# Social Features
ENABLE_SOCIAL_FEATURES=true
MAX_COMMENT_LENGTH=500
COMMENT_MODERATION=true

# Security Features
ENABLE_MEV_PROTECTION=true
ENABLE_BOT_DETECTION=true
MEV_DETECTION_THRESHOLD=5
BOT_DETECTION_SENSITIVITY=0.8

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Development
DEBUG=trading:*
LOG_LEVEL=info
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
